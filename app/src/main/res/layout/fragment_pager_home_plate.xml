<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/plant_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginTop="15dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent">

            <TextView
                android:id="@+id/home_plant_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="2dp"
                android:paddingLeft="25dp"
                android:paddingTop="4dp"
                android:textSize="17sp"
                android:text="板块标题"
                android:textColor="@color/white" />
        </LinearLayout>

        <TextView
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/home_plant_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_text_press"
            android:paddingRight="15dp"
            android:paddingEnd="15dp"
            android:paddingTop="4dp"
            android:textSize="17sp"
            android:text="查看更多" />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/colorAccent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.ahao.wnacg.ui.imageView.ComicImage
                android:id="@+id/home_plant_image1"
                style="@style/Plant_Comic_thumbnail"/>

            <TextView
                android:id="@+id/home_plant_mainTitle1"
                style="@style/Plant_Comic_main_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="漫画名" />

            <TextView
                android:id="@+id/home_plant_subTitle1"
                style="@style/Plant_Comic_sub_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="创建时间" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.ahao.wnacg.ui.imageView.ComicImage
                android:id="@+id/home_plant_image2"
                style="@style/Plant_Comic_thumbnail"/>

            <TextView
                android:id="@+id/home_plant_mainTitle2"
                style="@style/Plant_Comic_main_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="漫画名" />

            <TextView
                android:id="@+id/home_plant_subTitle2"
                style="@style/Plant_Comic_sub_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="创建时间" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.ahao.wnacg.ui.imageView.ComicImage
                android:id="@+id/home_plant_image3"
                style="@style/Plant_Comic_thumbnail" />

            <TextView
                android:id="@+id/home_plant_mainTitle3"
                style="@style/Plant_Comic_main_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="漫画名" />

            <TextView
                android:id="@+id/home_plant_subTitle3"
                style="@style/Plant_Comic_sub_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="创建时间" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/colorAccent"
        />

</LinearLayout>