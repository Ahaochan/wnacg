<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="网络">
        <ListPreference
            android:key="web_site"
            android:title="@string/preference_item_web_site"
            android:summary="%s"
            android:entries="@array/web_site_key"
            android:entryValues="@array/web_site_value"
            android:defaultValue="www.wnacg.com"
            />
        <SwitchPreference
            android:key="cellular_network_warning"
            android:title="@string/preference_item_cellular_network_warning"
            android:defaultValue="true"/>
    </PreferenceCategory>
</PreferenceScreen>